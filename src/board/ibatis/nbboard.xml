<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="board.dto.nbBoardDTO">

    <select id="selectAll" resultClass="board.dto.nbBoardDTO">
        select * from NBBOARD order by idx desc
    </select>

    <select id="selectByIdx" resultClass="board.dto.nbBoardDTO" parameterClass="int">
        select * from NBBOARD where idx = #idx#
    </select>
	<update id="updateReadCount" parameterClass="int">
		update NBBOARD set readcount = readcount+1 where idx = #idx#
	</update>
</sqlMap>
